  <scripts>
    <chroot-scripts config:type="list">
      <script>
        <file_name>post.sh</file_name>
        <chrooted config:type="boolean">true</chrooted>
        <source><![CDATA[
#!/usr/bin/env bash
echo 'PermitRootLogin yes' > /etc/ssh/sshd_config.d/root.conf
]]></source>
      </script>
    </chroot-scripts>
  </scripts>
</profile>
