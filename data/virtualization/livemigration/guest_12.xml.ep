<scripts>
    <init-scripts config:type="list">
      <script>
        <filename>setup_init01.sh</filename>
        <source><![CDATA[
#!/bin/sh
cat > /etc/init.d/after.local<< EOF
#!/bin/sh
mount {{IP_PATH}} /mnt
logger "{{IP_PATH}} mounted"
ip a | grep "scope global" | grep -Po '(?<=inet )[\d.]+' > /mnt/{{GUEST}}
logger "IP is written into file"
umount /mnt
logger "{{IP_PATH}} umounted"
echo "This is guest {{GUEST}}" > /srv/www/htdocs/guest
exit 0
EOF
chmod u+x /etc/init.d/after.local
]]></source>
      </script>
    </init-scripts>
</scripts>
</profile>
